{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NIREON V4 Component Manifest",
  "description": "Defines components and services to load at bootstrap.",
  "type": "object",
  "properties": {
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+$" },
    "metadata": { "type": "object" },
    "shared_services": { "type": "object" }, 
    "mechanisms": { 
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "class": { "type": "string" },
          "metadata_definition": { "type": "string" },
          "config": { "type": "object" },
          "enabled": { "type": "boolean" }
        },
        "required": ["id", "class"]
      }
    },
    "observers": { "type": "array", "items": {"type": "object"} },
    "managers": { "type": "array", "items": {"type": "object"} }
  },
  "required": ["version", "metadata"]
}