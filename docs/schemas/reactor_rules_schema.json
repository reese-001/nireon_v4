{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NIREON Reactor Rule Set",
  "description": "A file containing a list of rules for the NIREON Reactor.",
  "type": "object",
  "properties": {
    "version": { 
      "type": "string", 
      "pattern": "^[0-9]+\\.[0-9]+$", 
      "default": "1.0",
      "description": "Schema version for migration support"
    },
    "rules": {
      "type": "array",
      "items": { "$ref": "#/definitions/rule" }
    }
  },
  "required": ["version", "rules"],
  "definitions": {
    "rule": {
      "type": "object",
      "properties": {
        "id": { 
          "type": "string", 
          "description": "Unique identifier for the rule." 
        },
        "description": { 
          "type": "string" 
        },
        "namespace": { 
          "type": "string", 
          "default": "core",
          "description": "Rule namespace for organization" 
        },
        "priority": { 
          "type": "integer", 
          "default": 100,
          "description": "Execution priority (lower values = higher priority)" 
        },
        "enabled": { 
          "type": "boolean", 
          "default": true 
        },
        "conditions": {
          "type": "array",
          "items": { "$ref": "#/definitions/condition" }
        },
        "actions": {
          "type": "array",
          "items": { "$ref": "#/definitions/action" }
        }
      },
      "required": ["id", "conditions", "actions"]
    },
    "condition": {
      "type": "object",
      "properties": {
        "type": { 
          "type": "string", 
          "enum": ["signal_type_match", "payload_expression"] 
        },
        "signal_type": { 
          "type": "string", 
          "description": "For 'signal_type_match'." 
        },
        "expression": { 
          "type": "string", 
          "description": "For 'payload_expression', uses REL." 
        }
      },
      "required": ["type"]
    },
    "action": {
      "type": "object",
      "properties": {
        "type": { 
          "type": "string", 
          "enum": ["trigger_component", "emit_signal"] 
        },
        "component_id": { 
          "type": "string" 
        },
        "template_id": { 
          "type": "string" 
        },
        "input_data": { 
          "type": "object" 
        },
        "input_data_mapping": { 
          "type": "object" 
        },
        "signal_type": { 
          "type": "string" 
        },
        "payload": { 
          "type": "object" 
        },
        "source_node_id_override": {
          "type": "string",
          "description": "Override the source node ID for emitted signals"
        }
      },
      "required": ["type"]
    }
  }
}